<!-- app/views/pages/_contact_form.html.erb -->

<%= form_for @contact, url: pages_path, remote: true do |f| %>
    <div class="col-md-10">
        <%= f.label :name %></br>
        <%= f.text_field :name, required: true, class: "contact-form-text-area" %></br>
		
		<%= f.label :Company %></br>
        <%= f.text_field :Company, required: true, class: "contact-form-text-area" %></br>

        <%= f.label :email %></br>
        <%= f.text_field :email, required: true, class: "contact-form-text-area" %></br>

      <%= f.label :message %></br>
      <%= f.text_area :message, rows: 5, cols: 30, required: true, class: "contact-form-text-area",
                        placeholder: "Please Contact us with questions, we would be happy to get back with you"%></br>

      <div class= "hidden">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>

      <%= f.submit 'Submit Here', class: 'btn btn-primary btn-lg btn-block' %>
    </div>
  <% end %>
  <div class="col-md-6" id="flash-message">
    <%= render 'flash' %>
  </div>